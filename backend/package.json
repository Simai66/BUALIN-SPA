    "sqlite3": "^5.1.7",
    "zod": "^3.22.4",
    "nodemailer": "^6.9.8",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0",
    "exceljs": "^4.4.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
